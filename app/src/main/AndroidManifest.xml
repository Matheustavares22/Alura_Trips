<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alura.com.br.aluratrips">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AluraTrips">
        <activity android:name=".ui.activity.SplashScreenActivity" android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.PackageListActivity"/>
        <activity android:name=".ui.activity.PurchaseCompletedActivity" />
        <activity android:name=".ui.activity.PackagePaymentActivity" />
        <activity android:name=".ui.activity.PackageResumeActivity" />
    </application>

</manifest>